{
  "manifest_version": 2,
  "name": "PHP Manual Language Switcher",
  "version": "1.2.1",
  "description": "Redirects the PHP Manual page to a specified PHP Manual language page.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["*://*.php.net/*", "webRequest", "webRequestBlocking"],
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "options_page": "options.html",
  "page_action": {
    "default_icon": "icon_48.png",
    "default_title": "PHP Manual Language Switcher."
  }
}
